<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/label_name_tv"
                    android:text="@string/sandwich_name"
                    style="@style/heading_text_style"
                    />

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/body_text_style"
                    />
                <TextView
                    android:id="@+id/label_aka_tv"
                    android:text="@string/detail_also_known_as_label"
                    style="@style/heading_text_style"
                    />
                <TextView
                    android:id="@+id/aka_tv"
                    style="@style/body_text_style"
                    />


                <TextView
                    android:id="@+id/label_place_of_origin"
                    android:text="@string/detail_place_of_origin_label"
                    style="@style/heading_text_style"
                    />
                <TextView
                    android:id="@+id/place_of_origin"
                    style="@style/body_text_style"
                    />

                <TextView
                    android:id="@+id/label_description_tv"
                    android:text="@string/detail_description_label"
                    style="@style/heading_text_style"
                    />
                <TextView
                    android:id="@+id/description_tv"
                    style="@style/body_text_style"
                    />

                <TextView
                    android:id="@+id/label_ingredients_tv"
                    android:text="@string/detail_ingredients_label"
                    style="@style/heading_text_style"

                    />
                <TextView
                    android:id="@+id/ingredients_tv"
                    style="@style/body_text_style"
                    />

            </LinearLayout>

    </LinearLayout>
</ScrollView>