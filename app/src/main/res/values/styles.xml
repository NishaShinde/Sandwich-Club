<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="heading_text_style">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:layout_marginTop">@dimen/view_margin_bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/textview_padding</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="body_text_style">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/textview_padding</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <dimen name="textview_padding">4dp</dimen>
</resources>
